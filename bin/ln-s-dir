#! /bin/bash

# ln -s dir, resolves relative paths and makes
# link folder exist before hand

function help_me() {
    echo -e "Usage: ln-s-dir <link-location> <target-location> <other ln args>\n"
}

if [[ $# -lt 2 ]]; then
	  echo "Not enough arguments passed"
	  help_me
	  return
fi

link=$(readlink -f "$1")
target=$(readlink -f "$2")

mkdir -p "$1"
